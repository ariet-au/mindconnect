<!-- views/educations/_form.html.erb -->
<div class="box mb-4">
  
  <div class="columns is-multiline">
    <div class="column is-quarter">
      <div class="field">
        <%= f.label :degree, t('psychologist_profiles.education.degree'), class: "label" %>
        <div class="control">
          <%= f.text_field :degree, class: "input" %>
        </div>
      </div>
    </div>

    <div class="column is-quarter">
      <div class="field">
        <%= f.label :field_of_study, t('psychologist_profiles.education.field_of_study'), class: "label" %>
        <div class="control">
          <%= f.text_field :field_of_study, class: "input" %>
        </div>
      </div>
    </div>

    <div class="column is-quarter">
      <div class="field">
        <%= f.label :institution, t('psychologist_profiles.education.institution'), class: "label" %>
        <div class="control">
          <%= f.text_field :institution, class: "input" %>
        </div>
      </div>
    </div>

    <div class="column is-quarter">
      <div class="field">
        <%= f.label :graduation_year, t('psychologist_profiles.education.graduation_year'), class: "label" %>
        <div class="control">
          <%= f.text_field :graduation_year, class: "input" %>
        </div>
      </div>
    </div>

    <div class="column is-full">
      <!-- Hidden destroy field -->
      <%= f.hidden_field :_destroy %>

      <!-- Remove button - mobile friendly -->
      <button type="button" class="button is-danger remove-education-button mb-3 is-fullwidth-mobile">
        <span class="icon is-small">
          <i class="fas fa-trash"></i>
        </span>
        <span><%= t('psychologist_profiles.education.remove_education') %></span>
      </button>
    </div>
  </div>
</div>

<style>
/* Custom styles for mobile remove button */
@media screen and (max-width: 768px) {
  .remove-education-button {
    border-radius: 4px !important; /* Square corners instead of oval */
    padding: 0.75rem 1rem !important; /* Better padding for touch */
    font-size: 1rem !important; /* Readable font size */
    height: auto !important; /* Remove fixed height constraints */
    min-height: 2.5rem !important; /* Minimum touch target size */
  }
  
  .remove-education-button .icon {
    margin-right: 0.5rem !important;
  }
}

/* Ensure full width on very small screens */
@media screen and (max-width: 480px) {
  .remove-education-button {
    width: 100% !important;
  }
}
</style>