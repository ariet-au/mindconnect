<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, t('error')) %> <%= t('articles.prohibited_save') %></h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, t('articles.attributes.title'), style: "display: block" %>
    <%= form.text_field :title, style: "width: 100%; padding: 8px;" %>
  </div>

  <div class="field">
    <%= form.label :body, t('articles.attributes.body') %>
    <%= form.rich_textarea :body, class: "tall-textarea" %>
  </div>

  <div>
    <%= form.label :is_published, t('articles.attributes.is_published'), style: "display: block" %>
    <%= form.checkbox :is_published %>
  </div>

  <div>
    <%= form.submit t('articles.submit_form') %>
  </div>
<% end %>
<style>
.tall-textarea {
  min-height: 50vh; /* 70% of the screen height */
}
</style>