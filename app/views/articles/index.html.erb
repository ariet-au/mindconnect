<style>
  .articles-feed-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .articles-feed-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .articles-feed-title {
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    margin: 0;
  }

  .articles-create-btn {
    padding: 0.625rem 1.5rem;
    background-color: #3273dc;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: background-color 0.2s;
  }

  .articles-create-btn:hover {
    background-color: #2366d1;
    color: white;
  }

  .articles-notice {
    padding: 1rem 1.25rem;
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    border-radius: 4px;
    color: #155724;
    margin-bottom: 1.5rem;
  }

  .articles-feed-layout {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 2rem;
  }

  .articles-main-feed {
    min-width: 0;
  }

  .articles-sidebar {
    min-width: 0;
  }

  .article-preview-card {
    background: white;
    border: 1px solid #e8e8e8;
    border-radius: 8px;
    padding: 1.75rem;
    margin-bottom: 1.5rem;
    transition: box-shadow 0.2s;
  }

  .article-preview-card:hover {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .article-preview-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .article-preview-title a {
    color: #2c3e50;
    text-decoration: none;
  }

  .article-preview-title a:hover {
    color: #3273dc;
  }

  .article-preview-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: #7a7a7a;
  }

  .article-preview-author {
    color: #4a4a4a;
    font-weight: 500;
  }

  .article-preview-status {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    border-radius: 3px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .article-preview-status.published {
    background-color: #48c774;
    color: white;
  }

  .article-preview-status.draft {
    background-color: #b5b5b5;
    color: white;
  }

  .article-preview-views {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .article-preview-excerpt {
    color: #4a4a4a;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .article-preview-tags {
    margin-bottom: 1rem;
    min-height: 1.5rem;
  }

  .article-preview-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #f5f5f5;
    color: #4a4a4a;
    border-radius: 12px;
    font-size: 0.8125rem;
    margin-right: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .article-preview-read-more {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    border: 1px solid #3273dc;
    color: #3273dc;
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.875rem;
    transition: all 0.2s;
  }

  .article-preview-read-more:hover {
    background-color: #3273dc;
    color: white;
  }

  .articles-pagination {
    margin-top: 2rem;
  }

  .articles-empty {
    padding: 2rem;
    background-color: #d1ecf1;
    border: 1px solid #bee5eb;
    border-radius: 4px;
    color: #0c5460;
    text-align: center;
  }

  .articles-sidebar-widget {
    background: white;
    border: 1px solid #e8e8e8;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .articles-sidebar-widget-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.75rem;
  }

  .articles-sidebar-widget-content {
    color: #7a7a7a;
    font-size: 0.9375rem;
  }

  @media (max-width: 992px) {
    .articles-feed-layout {
      grid-template-columns: 1fr;
    }

    .articles-sidebar {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    .articles-sidebar-widget {
      margin-bottom: 0;
    }
  }

  @media (max-width: 640px) {
    .articles-feed-container {
      padding: 1.5rem 1rem;
    }

    .articles-feed-title {
      font-size: 1.5rem;
    }

    .article-preview-card {
      padding: 1.25rem;
    }

    .article-preview-title {
      font-size: 1.25rem;
    }

    .articles-sidebar {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="articles-feed-container">
  <div class="articles-feed-header">
    <%# Changed t('.title') to t('articles.index.title') %>
    <h1 class="articles-feed-title"><%= t('articles.index.title') %></h1>
    <%# Changed t('.new_article') to t('articles.index.new_article') %>
    <%= link_to t('articles.index.new_article'), new_article_path, class: "articles-create-btn" %>
  </div>

  <% if notice.present? %>
    <div class="articles-notice"><%= notice %></div>
  <% end %>

  <div class="articles-feed-layout">
    <div class="articles-main-feed">
      <% if @articles.any? %>
        <div id="articles">
          <% @articles.each do |article| %>
            <div class="article-preview-card">
              <h2 class="article-preview-title">
                <%= link_to article.title, article_path(article) %>
              </h2>
              
              <div class="article-preview-meta">
                <span class="article-preview-author">
                  <%= link_to article.psychologist_profile.full_name, psychologist_profile_path(article.psychologist_profile) %>
                </span>
                <span>‚Ä¢</span>
                  <span class="article-preview-views">
                  <span>üëÅ</span>
                  <%# Changed t('.views') to t('articles.views') for consistency with show view %>
                  <span><%= number_with_delimiter(@views_counts[article.id] || 0) %> <%= t('articles.views', count: @views_counts[article.id] || 0) %></span>
                </span>
                <span>‚Ä¢</span>
                <% if article.is_published %>
                  <%# Changed t('published') to t('articles.published') %>
                  <span class="article-preview-status published"><%= t('articles.published') %></span>
                <% else %>
                  <%# Changed t('draft') to t('articles.draft') %>
                  <span class="article-preview-status draft"><%= t('articles.draft') %></span>
                <% end %>
              </div>

              <div class="article-preview-tags">
                <%# Tags will go here - leave empty for now %>
                <%# Example: %>
                <%# <span class="article-preview-tag">Psychology</span> %>
                <%# <span class="article-preview-tag">Mental Health</span> %>
              </div>

              <div class="article-preview-excerpt">
                <%= article.body.to_plain_text.truncate(200) %>
              </div>

              <%# Changed t('read_more') to t('articles.read_more') %>
              <%= link_to t('articles.read_more'), article_path(article), class: "article-preview-read-more" %>
            </div>
          <% end %>
        </div>
        
        <div class="articles-pagination">
          <%= paginate @articles if @articles.respond_to?(:total_pages) %>
        </div>
      <% else %>
        <%# Changed t('.no_articles') to t('articles.index.no_articles') %>
        <div class="articles-empty"><%= t('articles.index.no_articles') %></div>
      <% end %>
    </div>
    
    <aside class="articles-sidebar">
      <div class="articles-sidebar-widget">
        <h3 class="articles-sidebar-widget-title"><%= t('sidebar.categories') %></h3>
        <p class="articles-sidebar-widget-content"><%= t('sidebar.coming_soon') %></p>
      </div>
      
      <div class="articles-sidebar-widget">
        <h3 class="articles-sidebar-widget-title"><%= t('sidebar.popular_articles') %></h3>
        <p class="articles-sidebar-widget-content"><%= t('sidebar.coming_soon') %></p>
      </div>
    </aside>
  </div>
</div>
