<style>
  .article-container {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .article-status {
    display: inline-block;
    padding: 0.375rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .article-status.published {
    background-color: #48c774;
    color: white;
  }

  .article-status.unpublished {
    background-color: #b5b5b5;
    color: white;
  }

  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #e8e8e8;
  }

  .article-main-title {
    font-size: 2.25rem;
    font-weight: 700;
    line-height: 1.3;
    color: #2c3e50;
    margin-bottom: 1rem;
  }

  .article-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    color: #7a7a7a;
    font-size: 0.9375rem;
  }

  .article-author {
    font-weight: 500;
    color: #4a4a4a;
  }

  .article-views {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .article-content {
    font-size: 1.125rem;
    line-height: 1.75;
    color: #333;
    margin-bottom: 2.5rem;
  }

  .article-content p {
    margin-bottom: 1.25rem;
  }

  .article-content h1,
  .article-content h2,
  .article-content h3,
  .article-content h4 {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
    color: #2c3e50;
    line-height: 1.3;
  }

  .article-content h1 { font-size: 2rem; }
  .article-content h2 { font-size: 1.75rem; }
  .article-content h3 { font-size: 1.5rem; }
  .article-content h4 { font-size: 1.25rem; }

  .article-content img {
    max-width: 100%;
    height: auto;
    margin: 2rem auto;
    display: block;
    border-radius: 8px;
  }

  .article-content ul,
  .article-content ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .article-content li {
    margin-bottom: 0.5rem;
  }

  .article-content blockquote {
    border-left: 4px solid #48c774;
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    font-style: italic;
    color: #555;
  }

  .article-actions {
    display: flex;
    gap: 0.75rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e8e8e8;
  }

  .article-edit-btn {
    padding: 0.5rem 1.25rem;
    border: 1px solid #dbdbdb;
    border-radius: 4px;
    color: #363636;
    text-decoration: none;
    font-size: 0.9375rem;
    transition: all 0.2s;
  }

  .article-edit-btn:hover {
    border-color: #b5b5b5;
    background-color: #f5f5f5;
  }

  @media (max-width: 768px) {
    .article-container {
      padding: 1.5rem 1rem;
    }

    .article-main-title {
      font-size: 1.75rem;
    }

    .article-content {
      font-size: 1.0625rem;
    }

    .article-meta {
      font-size: 0.875rem;
    }
  }
</style>
  <% if @article.is_published %>
<div class="article-container">
  <article>
    <header class="article-header">
      <h1 class="article-main-title">
        <%= @article.title %>
      </h1>
      
      <div class="article-meta">
        <time>
<%= @article.published_at&.in_time_zone(Rails.application.config.time_zone)&.strftime("%B %d, %Y") || t('articles.not_published_yet') %>
        </time>
        <span>‚Ä¢</span>
        <span class="article-author">
                  <%= link_to @article.psychologist_profile.full_name, psychologist_profile_path(@article.psychologist_profile) %>
        </span>
        <span>‚Ä¢</span>
        <span class="article-views">
        <span>üëÅ</span>
        <span>
          <%# Using absolute path for views pluralization %>
          <span><%= number_with_delimiter(@views_count) %> <%= t('articles.views', count: @views_count) %></span>
        </span>
      </span>
      </div>
    </header>

    <div class="article-content">
      <%= @article.body %>
    </div>

    
  </article>
</div>


  <% else %>
    <span class="article-status unpublished"><%= t('articles.not_published') %></span>
  <% end %>

    <div class="article-actions">

      <%= link_to t('articles.back'), articles_path, class: "article-edit-btn" %>

        <% if current_user && current_user.psychologist_profile && current_user.psychologist_profile.id == @article.psychologist_profile.id %>
          <%= link_to t('articles.edit_article'), edit_article_path(@article), class: "article-edit-btn" %>
        <% end %>
    </div>
