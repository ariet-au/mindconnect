    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .profile-section {
    padding: 2.5rem 2rem;
    border-bottom: 1px solid var(--border-light);
    transition: background-color 0.3s ease;
  }

  .profile-section:hover {
    background: #f9fafb;
  }

  .profile-section:last-child {
    border-bottom: none;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: center;
