    position: relative;
  }

  .header-actions {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .profile-info {
    display: flex;
    align-items: center;
    gap: 2rem;
