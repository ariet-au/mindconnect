<script>
document.addEventListener("turbo:load", initPage);

function initPage() {
  //
  // ---- Contact Toggle ----
  //
  const contactToggle = document.querySelector('.toggle-contacts');
  if (contactToggle) {
    contactToggle.addEventListener('click', function() {
      const contactList = document.querySelector('.contact-list');
      if (!contactList) return;
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      this.setAttribute('aria-expanded', !isExpanded);
      contactList.style.display = isExpanded ? 'none' : 'flex';
      this.querySelector('.toggle-text').textContent = isExpanded
        ? this.getAttribute('data-show-text')
        : this.getAttribute('data-hide-text');
      this.querySelector('i').classList.toggle('fa-chevron-down');
      this.querySelector('i').classList.toggle('fa-chevron-up');
    }, { once: true }); // prevent duplicate binding
  }

  //
  // ---- Copy to Clipboard ----
  //
  document.querySelectorAll('.copy-button').forEach(button => {
    button.addEventListener('click', function(event) {
      event.preventDefault();
      const value = this.getAttribute('data-value');
      if (!value) return;

      navigator.clipboard.writeText(value).then(() => {
        const originalIcon = this.innerHTML;
        this.innerHTML = '<i class="fas fa-check" style="color: var(--success-muted);"></i>';
        setTimeout(() => { this.innerHTML = originalIcon; }, 1500);
      }).catch(err => console.error('Unable to copy', err));
    }, { once: true });
  });

  //
  // ---- Video Toggle ----
  //
  const videoToggle = document.querySelector('.toggle-video');
  if (videoToggle) {
    videoToggle.addEventListener('click', function() {
      const videoContent = document.querySelector('.video-content');
      if (!videoContent) return;
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      this.setAttribute('aria-expanded', !isExpanded);
      videoContent.style.display = isExpanded ? 'none' : 'block';
      this.querySelector('.toggle-text').textContent = isExpanded
        ? this.getAttribute('data-show-text')
        : this.getAttribute('data-hide-text');
      this.querySelector('i').classList.toggle('fa-chevron-down');
      this.querySelector('i').classList.toggle('fa-chevron-up');
    }, { once: true });
  }

  //
  // ---- Text Truncation (Read More) ----
  //
  function truncateText(element, limit = 150) {
    const fullText = element.dataset.fullText || element.textContent;
    element.dataset.fullText = fullText; // store original
    const text = fullText.replace(/\n/g, ' ').replace(/\s+/g, ' ').trim();
    if (text.length > limit) {
      const truncated = text.substring(0, limit).trim() + '... ';
      element.innerHTML = `
        ${truncated}<a href="#" class="read-more-link"
        data-show-text="Read More"
        data-hide-text="Read Less">Read More</a>`;
      element.classList.add('truncated');
    } else {
      element.textContent = text;
      element.classList.remove('truncated');
    }
  }

  function toggleText(element, link) {
    const fullText = element.dataset.fullText;
    if (element.classList.contains('truncated')) {
      element.textContent = fullText;
      element.classList.remove('truncated');
      link.textContent = link.dataset.hideText;
    } else {
      truncateText(element);
      link.textContent = link.dataset.showText;
    }
  }

  document.querySelectorAll('.service-description').forEach(desc => truncateText(desc));

  document.addEventListener('click', function(event) {
    if (event.target.classList.contains('read-more-link')) {
      event.preventDefault();
      const description = event.target.closest('.service-description');
      if (description) toggleText(description, event.target);
    }
  });

  //
  // ---- Carousel ----
  //
  const carousel = document.querySelector('.services-carousel');
  if (carousel) {
    const container = carousel.querySelector('.carousel-container');
    const items = carousel.querySelectorAll('.carousel-item');
    const prevArrow = carousel.querySelector('.carousel-arrow.prev');
    const nextArrow = carousel.querySelector('.carousel-arrow.next');
    const bookSessionButton = document.querySelector('.book-session-button');

    if (!container || !items.length) return;

    let currentIndex = 0;
    const psychologistId = <%= @psychologist_profile.id.to_json %>; // safer injection

    function updateCarousel() {
      container.style.transform = `translateX(-${currentIndex * 100}%)`;

      // Re-truncate all descriptions after slide change
      document.querySelectorAll('.service-description').forEach(desc => truncateText(desc));

      // Update booking button
      if (bookSessionButton) {
        const currentServiceId = items[currentIndex].dataset.serviceId;
        bookSessionButton.setAttribute(
          'href',
          `/select_service?psychologist_id=${psychologistId}&service_id=${currentServiceId}`
        );
        bookSessionButton.dataset.serviceId = currentServiceId;
      }

      // Update arrows
      if (prevArrow) prevArrow.classList.toggle('disabled', currentIndex === 0);
      if (nextArrow) nextArrow.classList.toggle('disabled', currentIndex === items.length - 1);
    }

    if (prevArrow) {
      prevArrow.addEventListener('click', () => {
        if (currentIndex > 0) {
          currentIndex--;
          updateCarousel();
        }
      });
    }

    if (nextArrow) {
      nextArrow.addEventListener('click', () => {
        if (currentIndex < items.length - 1) {
          currentIndex++;
          updateCarousel();
        }
      });
    }

    updateCarousel();
  }
}
</script>
