/* Enhanced CTA Button Group */
.cta-button-group {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, max-content));
    gap: 1rem;
    justify-content: center;
    justify-items: center;
    margin: 2rem 0;
    padding: 0 1rem;
}

.cta-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
    overflow: hidden;
    min-height: 48px;
    max-width: 300px;
    box-sizing: border-box;
}

.cta-button.is-primary {
    background-color: var(--primary-blue);
    color: white;
    box-shadow: var(--shadow);
}

.cta-button.is-primary:hover {
    background-color: #1E6091;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(42, 124, 204, 0.3);
}

.cta-button.is-secondary {
    background-color: var(--background-white);
    color: var(--primary-blue);
    border-color: var(--primary-blue);
}

.cta-button.is-secondary:hover {
    background-color: var(--primary-blue);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(42, 124, 204, 0.2);
}

.cta-button i {
    margin-right: 0.75rem;
    font-size: 1rem;
}

/* Ripple effect */
.cta-button::after {
    content: '';
    position: absolute;
    width: 100px;
    height: 100px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    transform: scale(0);
    transition: transform 0.4s ease;
    pointer-events: none;
}

.cta-button:active::after {
    transform: scale(2);
    opacity: 0;
}

/* Mobile optimizations */
@media (max-width: 768px) {
    .cta-button-group {
        grid-template-columns: 1fr;
        gap: 0.75rem;
