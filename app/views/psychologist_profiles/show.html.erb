
<style>
@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

:root {
    --primary-blue: #2A7CCC;
    --dark-charcoal: #2C3E50;
    --accent-pink: #D62878;
    --telegram-blue: #0088CC;
    --whatsapp-green: #25D366;
    --background-white: #FFFFFF;
    --background-light: #F8FAFC;
    --card-background: #FFFFFF;
    --border-color: #E5E7EB;
    --text-primary: #374151;
    --text-secondary: #6B7280;
    --text-light: #9CA3AF;
    --success-muted: #10B981;
    --warning-muted: #F59E0B;
    --radius: 0.75rem;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

body {
    font-family: 'Inter', sans-serif;
    background-color: var(--background-light);
    color: var(--text-primary);
    line-height: 1.6;
}

.card {
    background-color: var(--card-background);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 3rem;
    margin-bottom: 2.5rem;
    border: 1px solid var(--border-color);
}

/* Redesigned Profile Header */
.profile-header {
    text-align: center;
    position: relative;
}

.profile-avatar {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid var(--background-white);
    box-shadow: var(--shadow-lg);
    margin-bottom: 1.5rem;
}

.profile-name-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.profile-name-with-badges {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.profile-name {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--dark-charcoal);
    margin: 0;
    letter-spacing: -0.025em;
}

.profile-location {
    color: var(--text-secondary);
    font-size: 1rem;
    margin-bottom: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.4rem;
}

.profile-location i {
    color: var(--primary-blue);
    font-size: 0.875rem;
}

/* Minimalistic Availability Widget */
.availability-widget-top {
    display: inline-flex;
    align-items: center;
    background-color: var(--background-white);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    padding: 0.5rem 0.875rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    gap: 0.5rem;
}

.availability-widget-top.available {
    border-color: #D1FAE5;
    background-color: #F0FDF4;
    color: var(--success-muted);
}

.availability-widget-top.unavailable {
    border-color: #FED7AA;
    background-color: #FFFBEB;
    color: var(--warning-muted);
}

.widget-icon-top {
    font-size: 0.75rem;
}

.widget-time-top {
    font-weight: 600;
}

/* Small Badge Design */
.name-badge {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    gap: 0.25rem;
}

.name-badge.is-doctor {
    background-color: #FEF2F2;
    color: var(--accent-pink);
    border: 1px solid #FECACA;
}

.name-badge.is-doctor i {
    color: var(--accent-pink);
    font-size: 0.6rem;
}

.name-badge.certified {
    background-color: #F0FDF4;
    color: var(--success-muted);
    border: 1px solid #D1FAE5;
}

.name-badge.certified i {
    color: var(--success-muted);
    font-size: 0.6rem;
}

/* Regular badges for experience */
.profile-badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.25rem;
}

.badge {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--background-light);
    color: var(--text-secondary);
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--border-color);
}

.badge i {
    margin-right: 0.5rem;
    color: var(--primary-blue);
    font-size: 0.75rem;
}

/* Original Button Colors */
.button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    font-size: 1rem;
    min-width: 200px;
}

.button.is-primary {
    background-color: var(--primary-blue);
    color: white;
}

.button.is-primary:hover {
    background-color: #1E6091;
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(42, 124, 204, 0.4);
}

.button.is-secondary {
    background-color: transparent;
    color: var(--primary-blue);
    border-color: var(--primary-blue);
}

.button.is-secondary:hover {
    background-color: var(--primary-blue);
    color: white;
    transform: translateY(-3px);
}

/* Sections */
.profile-section {
    padding: 2.5rem 0;
    border-bottom: 1px solid var(--border-color);
}

.profile-section:last-of-type {
    border-bottom: none;
    padding-bottom: 0;
}

.section-title {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--dark-charcoal);
    margin-bottom: 1.8rem;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.section-title i {
    color: var(--primary-blue);
}

.section-content p, .section-content ul {
    color: var(--text-secondary);
    font-size: 1.05rem;
}

/* Services Section Availability */
.availability-status {
    padding: 1.8rem;
    border-radius: var(--radius);
    text-align: center;
}

.availability-status.available {
    background-color: #E8F6F3;
    border: 1px solid #A3E4D7;
}

.availability-status.unavailable {
    background-color: #FDF2E9;
    border: 1px solid #F5CBA7;
}

.availability-label {
    font-size: 1.1rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.6rem;
}

.availability-time {
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--dark-charcoal);
    margin-top: 0.6rem;
}

/* --- START: Redesigned Service Card --- */
.service-card-new {
    background-color: var(--background-white);
    border: 1px solid var(--border-color);
    border-radius: var(--radius);
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    width: 100%;
    box-sizing: border-box;
}

.service-card-new:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
}

.service-card-new h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
}

.service-card-new h3 a {
    color: var(--dark-charcoal);
    text-decoration: none;
    transition: color 0.3s ease;
}

.service-card-new h3 a:hover {
    color: var(--primary-blue);
}

.service-card-new .service-description {
    color: var(--text-secondary);
    font-size: 1rem;
    margin-bottom: 2rem;
    position: relative;
}

.service-description.truncated {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.read-more-link {
    color: var(--primary-blue);
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    margin-top: 0.5rem;
}

.read-more-link:hover {
    text-decoration: underline;
}

.service-details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 2rem;
}

.service-detail-item {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.service-detail-icon {
    font-size: 1.5rem;
    color: var(--primary-blue);
    width: 30px;
    text-align: center;
}

.service-detail-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
    display: block;
    margin-bottom: 0.1rem;
}

.service-detail-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
}

.service-actions {
    display: flex;
    justify-content: flex-end;
}

/* --- Carousel Styles --- */
.services-carousel {
    position: relative;
    overflow: hidden;
    margin-top: 2rem;
}

.carousel-container {
    display: flex;
    transition: transform 0.5s ease-in-out;
    width: 100%;
}

.carousel-item {
    flex: 0 0 100%;
    width: 100%;
    box-sizing: border-box;
}

.carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: var(--background-white);
    border: 1px solid var(--border-color);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: var(--shadow-sm);
    z-index: 10;
    color: var(--text-primary);
    font-size: 1.2rem;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

.carousel-arrow:hover {
    background-color: var(--primary-blue);
    color: white;
    transform: translateY(-50%) scale(1.1);
}

.carousel-arrow.prev {
    left: 10px;
}

.carousel-arrow.next {
    right: 10px;
}

.carousel-arrow.disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* --- END: Redesigned Service Card --- */

/* Education Section */
.education-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.education-item {
    background-color: #F9FAFB;
    border: 1px solid var(--border-color);
    border-radius: var(--radius);
    padding: 1.8rem;
    display: flex;
    align-items: flex-start;
    gap: 1.2rem;
}

.education-item .education-icon {
    color: var(--primary-blue);
    font-size: 1.6rem;
    margin-top: 0.3rem;
}

.education-item .education-details h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--dark-charcoal);
    margin: 0 0 0.3rem 0;
}

.education-item .education-details p {
    margin: 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
}

/* Contact Section */
.toggle-contacts, .toggle-video {
    width: 100%;
    text-align: center;
    background: none;
    border: 1px dashed var(--border-color);
    padding: 1rem;
    border-radius: var(--radius);
    cursor: pointer;
    color: var(--text-secondary);
    font-weight: 500;
    transition: all 0.3s ease;
}

.toggle-contacts:hover, .toggle-video:hover {
    border-color: var(--primary-blue);
    color: var(--primary-blue);
}

.contact-list, .video-content {
    margin-top: 2rem;
    display: none;
    flex-direction: column;
    gap: 1rem;
}

.contact-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    background-color: #F9FAFB;
    border-radius: var(--radius);
    border: 1px solid var(--border-color);
}

.contact-item[data-method="telegram"] .contact-info i { color: var(--telegram-blue); }
.contact-item[data-method="whatsapp"] .contact-info i { color: var(--whatsapp-green); }

.contact-input {
    border: none;
    background: none;
    color: var(--text-secondary);
    font-size: 0.95rem;
}

.copy-button, .contact-link {
    color: var(--text-light);
    background: none;
    border: none;
    cursor: pointer;
}

.copy-button:hover, .contact-link:hover {
    color: var(--primary-blue);
}

/* Video Wrapper */
.video-wrapper {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    max-width: 100%;
    background: #f0f0f0;
    border-radius: var(--radius);
}

.video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

/* Utility */
.text-center { text-align: center; }
.mb-4 { margin-bottom: 1.5rem; }

