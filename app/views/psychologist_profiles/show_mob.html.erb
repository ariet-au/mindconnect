<style>
    @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap');
    :root {
        --primary-color: #1E40AF; /* Deeper blue for professionalism */
        --secondary-color: #64748B; /* Softer gray for calming effect */
        --accent-color: #EFF6FF; /* Light blue accent */
        --text-dark: #1F2937; /* Darker text for readability */
        --text-light: #4B5563; /* Lighter text for secondary info */
        --background: #F9FAFB; /* Soft off-white background */
        --card-background: #FFFFFF; /* White cards for clean look */
        --border-color: #E5E7EB; /* Subtle border */
        --radius-small: 0.5rem;
        --radius-large: 1rem; /* Slightly reduced for professionalism */
        --shadow-subtle: 0 4px 12px rgba(0, 0, 0, 0.05); /* Softer shadow */
    }
    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--background);
        margin: 0;
        padding: 0;
        line-height: 1.6;
        color: var(--text-dark);
    }
    .container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 0 1rem;
    }
    .card {
        background-color: var(--card-background);
        border-radius: var(--radius-large);
        box-shadow: var(--shadow-subtle);
        padding: 2rem;
        margin-bottom: 1.5rem;
    }
    /* Profile Header */
    .profile-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--border-color);
    }
    .profile-name {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--primary-color);
        margin: 1rem 0 0.25rem 0;
    }
    .profile-location {
        color: var(--text-light);
        font-size: 0.9rem;
    }
    .profile-badges {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
    }
    .badge {
        display: inline-flex;
        align-items: center;
        padding: 0.3rem 0.8rem;
        background-color: var(--accent-color);
        color: var(--text-light);
        border-radius: 2rem;
        font-size: 0.8rem;
        font-weight: 500;
        border: 1px solid var(--border-color);
    }
    .badge i {
        margin-right: 0.4rem;
        color: var(--secondary-color);
    }
    /* Buttons */
    .button-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        width: 100%;
        max-width: 300px;
        margin-top: 1.5rem;
    }
    @media (min-width: 600px) {
        .button-group {
            flex-direction: row;
            max-width: none;
            gap: 1rem;
        }
    }
    .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.75rem 1.5rem;
        border-radius: 9999px;
        font-weight: 500;
        cursor: pointer;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
        border: none;
        font-size: 0.9rem;
    }
    .button.is-primary {
        background-color: var(--primary-color);
        color: var(--background);
        box-shadow: 0 2px 6px rgba(30, 64, 175, 0.2);
    }
    .button.is-primary:hover {
        background-color: #1E3A8A; /* Darker blue on hover */
        transform: translateY(-1px);
    }
    .button.is-fullwidth {
        width: 100%;
    }
    .button.is-secondary {
        background-color: var(--card-background);
        color: var(--primary-color);
        border: 1px solid var(--primary-color);
    }
    .button.is-secondary:hover {
        background-color: var(--accent-color);
        transform: translateY(-1px);
    }
    /* Section styling */
    .profile-section {
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
    }
    .profile-section:last-of-type {
        border-bottom: none;
        margin-bottom: 0;
    }
    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .section-title i {
        color: var(--secondary-color);
    }
    .section-content p, .section-content ul, .section-content li {
        color: var(--text-light);
        font-size: 1rem;
    }
    .video-wrapper {
        position: relative;
        width: 100%;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        margin-top: 1rem;
        border-radius: var(--radius-small);
    }
    .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 0;
    }
    /* Services section */
    .services-grid {
        display: grid;
        gap: 1rem;
        grid-template-columns: 1fr;
    }
    .service-card {
        background-color: var(--card-background);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-small);
        padding: 1.5rem;
        transition: all 0.3s ease;
    }
    .service-card:hover {
        box-shadow: var(--shadow-subtle);
        transform: translateY(-2px);
    }
    .service-card h3 {
        font-size: 1.2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }
    .service-card p {
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }
    .service-details .details-row {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-top: 0.5rem;
        margin-bottom: 1rem;
    }
    .service-details .details-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background-color: var(--accent-color);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-small);
    }
    .availability-status {
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: var(--radius-small);
    }
    .availability-status.available {
        background-color: #E0F2FE;
        border: 1px solid #BAE6FD;
    }
    .availability-status.unavailable {
        background-color: #FEE2E2;
        border: 1px solid #FECACA;
    }
    .availability-label {
        font-size: 0.9rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .availability-details {
        display: flex;
        flex-direction: column;
        margin-top: 0.25rem;
    }
    .availability-time {
        font-size: 1rem;
        font-weight: 700;
    }
    .availability-timezone {
        font-size: 0.75rem;
        color: var(--text-light);
    }
    .availability-message {
        font-size: 0.85rem;
        color: var(--text-light);
        margin-top: 0.5rem;
    }
    .service-card-footer {
        padding-top: 0.75rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    /* Education section */
    .education-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .education-item {
        background-color: var(--accent-color);
        border-radius: var(--radius-small);
        padding: 1rem;
    }
    .education-item h3 {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--primary-color);
    }
    .education-item p {
        font-size: 0.85rem;
    }
    /* Contact section */
    .other-contacts {
        margin-top: 1.5rem;
    }
    .toggle-contacts {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        padding: 0.75rem 1.5rem;
        background-color: var(--accent-color);
        color: var(--primary-color);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-small);
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .toggle-contacts:hover {
        background-color: #DBEAFE;
    }
    .toggle-contacts i {
        margin-left: 0.5rem;
        transition: transform 0.3s ease;
    }
    .toggle-contacts[aria-expanded="true"] i {
        transform: rotate(180deg);
    }
    .contact-list {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    .contact-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.75rem;
        background-color: var(--card-background);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-small);
    }
    .contact-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .contact-info i {
        color: var(--secondary-color);
    }
    .contact-label {
        font-size: 0.9rem;
        color: var(--text-dark);
    }
    .contact-actions {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .contact-input {
        border: none;
        background: none;
        color: var(--text-light);
        font-size: 0.85rem;
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .copy-button, .contact-link {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 2rem;
        height: 2rem;
        background-color: var(--accent-color);
        color: var(--primary-color);
        border-radius: var(--radius-small);
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    .copy-button:hover, .contact-link:hover {
        background-color: #DBEAFE;
    }
    /* Links */
    a {
        color: #36454F; /* Charcoal for anchors */
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
    /* Mobile optimizations */
    @media (max-width: 599px) {
        .container {
            padding: 0 0.5rem;
        }
        .card {
            padding: 1.5rem;
        }
        .profile-name {
            font-size: 1.6rem;
        }
        .section-title {
            font-size: 1.3rem;
        }
        .button {
            padding: 0.7rem 1.2rem;
            font-size: 0.85rem;
        }
        .contact-input {
            max-width: 100px;
        }
    }
</style>
<div class="container">
    <div class="card">
        <div class="profile-header">
            <% if @psychologist_profile.profile_img.attached? %>
                <%= image_tag url_for(@psychologist_profile.profile_img.variant(resize_to_limit: [120, 120])), class: "profile-avatar" %>
            <% else %>
                <%= image_tag "https://placehold.co/120x120/E9ECEF/6C757D?text=PP", alt: "Default Profile", class: "profile-avatar" %>
            <% end %>
            <h1 class="profile-name"><%= "#{@psychologist_profile.first_name} #{@psychologist_profile.last_name}" %></h1>
            <p class="profile-location">
                <% if @psychologist_profile.country.present? %>
                    <i class="fas fa-map-marker-alt"></i>
                    <% if @psychologist_profile.city.present? %>
                        <%= t("cities.#{@psychologist_profile.city.downcase.gsub(' ', '_').gsub('-', '_')}", default: @psychologist_profile.city) %>,
                    <% end %>
                    <%= t("countries.#{@psychologist_profile.country.downcase.gsub(' ', '_').gsub('-', '_')}", default: @psychologist_profile.country) %>
                <% end %>
            </p>
            <div class="profile-badges">
                <% if @psychologist_profile.is_doctor %>
                <span class="badge"><i class="fas fa-user-md"></i><%= t('psychologist_profiles.show.doctor') %></span>
                <% end %>
                <% if @psychologist_profile.is_degree_boolean %>
                <span class="badge"><i class="fas fa-certificate"></i><%= t('psychologist_profiles.show.certified') %></span>
                <% end %>
                <% if @psychologist_profile.years_of_experience.present? %>
                <span class="badge"><i class="fas fa-clock"></i><%= t('psychologist_profiles.show.years_experience', count: @psychologist_profile.years_of_experience) %></span>
                <% end %>
            </div>
            <% if @psychologist_profile.standard_rate.present? %>
            <p class="mt-2 text-sm text-center font-semibold" style="color: var(--primary-color);">Standard Rate: <%= @psychologist_profile.standard_rate %></p>
            <% end %>
        </div>
        <div class="flex justify-center">
            <% primary_contact_method = @psychologist_profile.primary_contact_method %>
            <% contact_keys = { email: 'fas fa-envelope', telegram: 'fab fa-telegram', whatsapp: 'fab fa-whatsapp', primary_phone: 'fas fa-phone' } %>
            <% contact_link = case primary_contact_method
                                when 'email' then "mailto:#{@psychologist_profile.user.email}"
                                when 'telegram' then "https://t.me/#{@psychologist_profile.telegram}"
                                when 'whatsapp' then "https://wa.me/#{@psychologist_profile.whatsapp}"
                                when 'primary_phone' then "tel:#{@psychologist_profile.contact_phone}"
                                else nil
                                end %>
            <div class="button-group">
                <% if @psychologist_profile.featured_service.present? %>
                    <% service = @psychologist_profile.featured_service %>
                    <%= link_to new_service_booking_path(service), class: "button is-primary flex-1" do %>
                        <i class="fas fa-calendar-alt mr-2"></i>
                        <span><%= t('psychologist_profiles.show.book_a_session') %></span>
                    <% end %>
                    <% if contact_link %>
                        <a href="<%= contact_link %>" class="button is-secondary flex-1">
                            <i class="<%= contact_keys[primary_contact_method.to_sym] %> mr-2"></i>
                            <span><%= t('psychologist_profiles.show.contact_me') %></span>
                        </a>
                    <% end %>
                <% elsif contact_link %>
                    <a href="<%= contact_link %>" class="button is-primary is-fullwidth">
                        <i class="<%= contact_keys[primary_contact_method.to_sym] %> mr-2"></i>
                        <span><%= t('psychologist_profiles.show.contact_me') %></span>
                    </a>
                <% end %>
                <% if @psychologist_profile.user == current_user %>
                    <%= link_to edit_psychologist_profile_path(@psychologist_profile.id), class: "button is-secondary" do %>
                        <i class="fas fa-edit mr-2"></i>
                        <span><%= t('edit_profile') %></span>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="card">
        <% if @next_available_slot %>
            <div class="availability-status available">
                <span class="availability-label"><i class="fas fa-clock"></i><%= t('psychologist_profiles.show.next_available_appointment') %></span>
                <div class="availability-details">
                    <strong class="availability-time"><%= l(@next_available_slot, format: :long) %></strong>
                    <span class="availability-timezone"><%= @display_timezone %></span>
                </div>
            </div>
        <% else %>
            <div class="availability-status unavailable">
                <span class="availability-label"><i class="fas fa-calendar-times"></i><%= t('psychologist_profiles.show.no_availability') %></span>
                <p class="availability-message"><%= t('psychologist_profiles.show.check_back_later') %></p>
            </div>
        <% end %>
        <div class="profile-section">
            <h2 class="section-title"><i class="fas fa-user-circle"></i> <%= t('psychologist_profiles.show.about_me') %></h2>
            <div class="section-content">
                <p><%= simple_format(@psychologist_profile.about_me) %></p>
                <% if @psychologist_profile.youtube_video_url.present? %>
                    <% video_id = youtube_embed_url(@psychologist_profile.youtube_video_url) %>
                    <% if video_id %>
                        <div class="video-wrapper">
                            <iframe src="https://www.youtube.com/embed/<%= video_id %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
        <% if @psychologist_profile.about_issues.present? %>
            <div class="profile-section">
                <h2 class="section-title"><i class="fas fa-heart"></i> <%= t('psychologist_profiles.show.areas_of_focus') %></h2>
                <div class="section-content">
                    <p><%= simple_format(@psychologist_profile.about_issues) %></p>
                </div>
            </div>
        <% end %>
        <% if @psychologist_profile.educations.any? %>
            <div class="profile-section">
                <h2 class="section-title"><i class="fas fa-graduation-cap"></i> <%= t('psychologist_profiles.show.education') %></h2>
                <div class="education-list">
                    <% @psychologist_profile.educations.each do |education| %>
                        <div class="education-item">
                            <h3>
                                <%= t('psychologist_profiles.show.degree_of_study',
                                        degree: t("education_degrees.#{education.degree}", default: education.degree),
                                        field: t("education_fields.#{education.field_of_study}", default: education.field_of_study)) %>
                                <% if education.institution.present? %>
                                    <%= t('psychologist_profiles.show.at_institution', institution: education.institution) %>
                                <% end %>
                            </h3>
                            <p>
                                <% if education.graduation_year.present? %>
                                    <%= t('psychologist_profiles.show.graduated_in', year: education.graduation_year) %>
                                <% else %>
                                    <%= t('psychologist_profiles.show.professional_qualification') %>
                                <% end %>
                            </p>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
        <div class="profile-section">
            <h2 class="section-title"><i class="fas fa-briefcase"></i> <%= t('psychologist_profiles.show.services_offered') %></h2>
            <% if @psychologist_profile.featured_service.present? %>
                <% service = @psychologist_profile.featured_service %>
                <div class="services-grid">
                    <div class="service-card">
                        <div class="service-details">
                            <h3>
                                <%= link_to t("services.#{service.name}", default: service.name), service_path(service) %>
                            </h3>
                            <p><%= simple_format(service.description) %></p>
                            <div class="details-row">
                                <div class="details-item">
                                    <i class="fas fa-dollar-sign"></i>
                                    <span class="font-bold">
                                        <% if service.price == 0 %>
                                            <%= t('psychologist_profiles.show.free') %>
                                        <% else %>
                                            <% if service.currency.present? && current_currency.present? %>
                                                <% converted = service.converted_rate(current_currency) %>
                                                <%= humanized_money_with_symbol(converted) if converted %>
                                            <% end %>
                                        <% end %>
                                    </span>
                                </div>
                                <div class="details-item">
                                    <i class="fas fa-hourglass-half"></i>
                                    <span><%= t('psychologist_profiles.show.duration_minutes', count: service.duration_minutes) %></span>
                                </div>
                            </div>
                        </div>
                        <div class="service-card-footer">
                            <div class="service-delivery">
                                <% if service.delivery_method.to_s.downcase.include?("online") %>
                                    <span class="badge" style="background-color: #E8F0F7; color: #2D72B2;"><i class="fas fa-laptop"></i><%= t('psychologist_search.online') %></span>
                                <% else %>
                                    <span class="badge" style="background-color: #FFF3E0; color: #EF6C00;"><i class="fas fa-user"></i><%= t('psychologist_search.in_person') %></span>
                                <% end %>
                            </div>
                            <%= link_to t('psychologist_profiles.show.book_this_service'), new_service_booking_path(service), class: "button is-primary" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="other-contacts">
            <button class="toggle-contacts" aria-expanded="false" data-show-text="<%= t('psychologist_profiles.show.show_all_contacts') %>" data-hide-text="<%= t('psychologist_profiles.show.hide_all_contacts') %>">
                <span class="toggle-text"><%= t('psychologist_profiles.show.show_all_contacts') %></span>
                <i class="fas fa-chevron-down"></i>
            </button>
            <div class="contact-list" style="display: none;">
                <% other_methods = contact_keys.reject { |k, _| k.to_s == primary_contact_method } %>
                <% other_methods.each do |method, icon| %>
                    <% value = case method
                                when :email then @psychologist_profile.user.email
                                when :telegram then @psychologist_profile.telegram
                                when :whatsapp then @psychologist_profile.whatsapp
                                when :primary_phone then @psychologist_profile.contact_phone
                                else nil
                                end %>
                    <% link = case method
                                when :email then "mailto:#{value}"
                                when :telegram then "https://t.me/#{value}"
                                when :whatsapp then "https://wa.me/#{value}"
                                when :primary_phone then "tel:#{value}"
                                else nil
                                end %>
                    <% if value.present? %>
                        <div class="contact-item">
                            <div class="contact-info">
                                <i class="<%= icon %>"></i>
                                <span class="contact-label"><%= method.to_s.capitalize %></span>
                            </div>
                            <div class="contact-actions">
                                <input class="contact-input" readonly value="<%= value %>">
                                <button class="copy-button" data-value="<%= value %>" title="<%= t('psychologist_profiles.show.copy') %>">
                                    <i class="fas fa-copy"></i>
                                </button>
                                <a href="<%= link %>" class="contact-link" target="_blank" title="<%= t('psychologist_profiles.show.open_link') %>">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<script>
    document.querySelector('.toggle-contacts').addEventListener('click', function() {
        const contactList = document.querySelector('.contact-list');
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !isExpanded);
        contactList.style.display = isExpanded ? 'none' : 'block';
        this.querySelector('.toggle-text').textContent = isExpanded ? 
            this.getAttribute('data-show-text') : 
            this.getAttribute('data-hide-text');
    });

    document.querySelectorAll('.copy-button').forEach(button => {
        button.addEventListener('click', function() {
            const value = this.getAttribute('data-value');
            navigator.clipboard.writeText(value).then(() => {
                alert('Copied to clipboard!');
            }).catch(err => {
                console.error('Failed to copy: ', err);
            });
        });
    });
</script>