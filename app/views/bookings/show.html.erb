<style>
  /* Custom styles specific to the booking details view */
  .booking-details-container {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 2px 3px rgba(10, 10, 10, 0.1), 0 0 0 1px rgba(10, 10, 10, 0.1);
    max-width: 768px; /* Constrain width for better readability */
    margin: 20px auto; /* Center the container */
  }
  .booking-details-item {
    margin-bottom: 1rem;
  }
  .booking-details-label {
    font-weight: 600;
    color: #363636; /* Bulma default text color */
  }
  .booking-details-time-display {
    padding: calc(0.5em - 1px) calc(0.75em - 1px);
    border: 1px solid #dbdbdb;
    border-radius: 4px;
    background-color: #f0f0f0; /* Slightly different background for read-only */
    display: inline-block; /* To make padding/border apply correctly */
    min-width: 250px; /* Give it some space */
    word-break: break-all; /* Ensure long links/times wrap */
  }
  .booking-details-actions {
    margin-top: 2rem;
  }

  /* Styles from application.css for custom buttons */
  .button.is-primary-blue {
    background-color: #fff;
    border: 1px solid #2C3E50;
    color: #2C3E50;
    box-shadow: none;
  }

  .button.is-primary-blue:hover,
  .button.is-primary-blue.is-hovered {
    background-color: #2C3E50;
    border-color: #2C3E50;
    color: #fff;
    cursor: pointer;
  }

  .button.is-primary-blue:focus,
  .button.is-primary-blue.is-focused {
    background-color: #2C3E50;
    border-color: #2C3E50;
    color: #fff;
    outline: none;
    box-shadow: 0 0 0 0.125em rgba(44, 62, 80, 0.25);
  }

  .button.is-primary-blue:active,
  .button.is-primary-blue.is-active {
    background-color: #1A252F;
    border-color: #1A252F;
    color: #fff;
  }

  .button.is-primary-blue[disabled],
  fieldset[disabled] .button.is-primary-blue {
    background-color: #fff;
    border-color: #2C3E50;
    color: #2C3E50;
  }
</style>

<div class="booking-details-container">
  <h2 class="title is-4"><%= t('.page_title') %></h2>

  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.service_label') %>:</span> <%= @booking.service&.name || 'N/A' %></p>
  </div>
  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.psychologist_label') %>:</span> <%= @booking.psychologist_profile&.full_name || 'N/A' %></p>
  </div>
  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.client_label') %>:</span> <%= @booking.client_profile&.full_name || @booking.internal_client_profile&.full_name || 'N/A' %></p>
  </div>

  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.booking_time_label') %>:</span>
      <span class="utc-date-time-range booking-details-time-display"
            data-start-utc="<%= @booking.start_time.utc.iso8601 if @booking.start_time.present? %>"
            data-end-utc="<%= @booking.end_time.utc.iso8601 if @booking.start_time.present? %>">
        <%= t('.loading_time') %>
      </span>
    </p>
  </div>

  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.duration_label') %>:</span> <%= @booking.service&.duration_minutes ? t('.duration_minutes', count: @booking.service.duration_minutes) : t('.duration_minutes', count: number_with_precision((@booking.end_time - @booking.start_time) / 60, precision: 0)) %></p>
  </div>
  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.status_label') %>:</span> <%= t(".status_tags.#{@booking.status&.underscore || 'unknown'}") %></p>
  </div>
  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.created_by_label') %>:</span> <%= t(".created_by_options.#{@booking.created_by&.underscore || 'na'}") %></p>
  </div>
  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.notes_label') %>:</span> <%= @booking.notes.presence || t('.no_notes') %></p>
  </div>

  <% if @booking.pending? && @booking.created_by == 'psychologist' %>
    <%
      psychologist_profile = @booking.psychologist_profile
      confirmation_url = confirm_psychologist_profile_booking_url(psychologist_profile, @booking, token: @booking.confirmation_token)
    %>
    <div class="booking-details-item">
      <p><span class="booking-details-label"><%= t('.share_link_label') %>:</span>
        <span class="booking-details-time-display">
          <a href="<%= confirmation_url %>">
            <%= confirmation_url %>
          </a>
        </span>
      </p>
    </div>
    <div class="booking-details-item">
      <p><span class="booking-details-label"><%= t('.share_via_label') %>:</span></p>
      <div class="field is-grouped booking-details-actions">
        <p class="control">
          <a href="https://t.me/share/url?url=<%= CGI.escape(confirmation_url) %>&text=<%= CGI.escape(t('.telegram_share_text', service: @booking.service&.name || 'N/A', psychologist: @booking.psychologist_profile&.full_name || 'N/A')) %>"
             class="button is-info" target="_blank">
            Share to Telegram
          </a>
        </p>
        <p class="control">
          <a href="https://api.whatsapp.com/send?text=<%= CGI.escape(t('.whatsapp_share_text', service: @booking.service&.name || 'N/A', psychologist: @booking.psychologist_profile&.full_name || 'N/A', url: confirmation_url)) %>"
             class="button is-success" target="_blank">
            Share to WhatsApp
          </a>
        </p>
      </div>
    </div>
  <% end %>

  <div class="field is-grouped booking-details-actions">
    <p class="control">
      <%= link_to t('.edit_button'), edit_psychologist_profile_booking_path(@booking.psychologist_profile, @booking), class: "button is-primary-blue" %>
    </p>
    <p class="control">
      <%= link_to t('.back_button'), psychologist_profile_bookings_path(@booking.psychologist_profile), class: "button is-light" %>
    </p>
  </div>

  <div class="booking-details-item">
    <p><span class="booking-details-label"><%= t('.add_to_calendar_label') %>:</span></p>
    <div class="buttons">
      <%= link_to t('.download_ics_button'), download_ics_psychologist_profile_booking_path(@booking.psychologist_profile, @booking), class: "button is-link" %>
      <%= link_to t('.google_calendar_button'), "https://calendar.google.com/calendar/render?action=TEMPLATE&text=#{CGI.escape(t('.calendar_title', service: @booking.service&.name || 'N/A'))}&dates=#{@booking.start_time.utc.strftime('%Y%m%dT%H%M%SZ')}/#{@booking.end_time.utc.strftime('%Y%m%dT%H%M%SZ')}&details=#{CGI.escape(t('.calendar_details', psychologist: @booking.psychologist_profile&.full_name))}", target: "_blank", class: "button is-success" %>
    </div>
  </div>
</div>