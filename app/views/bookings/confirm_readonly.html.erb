<script>
document.addEventListener("turbo:load", function () {
  const calendarDropdown = document.getElementById('calendarDropdown');

  function setupCalendarDropdown() {
    if (!calendarDropdown) return;

    const trigger = calendarDropdown.querySelector('.dropdown-trigger');

    trigger.addEventListener('click', (e) => {
      e.stopPropagation();
      calendarDropdown.classList.toggle('is-active');
    });
  }

  setupCalendarDropdown();

  // Close calendar dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (calendarDropdown && !calendarDropdown.contains(e.target)) {
      calendarDropdown.classList.remove('is-active');
    }
  });
});

document.addEventListener("turbo:before-cache", function() {
  const calendarDropdown = document.getElementById('calendarDropdown');
  if (calendarDropdown) {
    calendarDropdown.classList.remove('is-active');
  }
});
</script>