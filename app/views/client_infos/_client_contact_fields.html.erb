<div class="contact-row">
  <%= f.select :method,
        ClientContact::CONTACT_METHODS.map { |m| [m.titleize, m] },
        { prompt: "Select method" } %>

  <%= f.text_field :value, placeholder: "e.g. +61412345678 or @username" %>

  <button type="button" class="button is-small is-danger remove-contact">Remove</button>
  <%= f.hidden_field :_destroy %>
</div>
