<div class="section">
  <div class="container">
    <h1 class="title is-3">My Clients</h1>

    <%= link_to "➕ Add New Client", new_client_info_path, class: "button is-primary mb-4" %>

    <% if @client_infos.any? %>
      <div class="table-container">
        <table class="table is-fullwidth is-striped is-hoverable">
          <thead>
            <tr>
              <th>Name</th>
              <th>Year of Birth</th>
              <th>City</th>
              <th>Contacts</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @client_infos.each do |client| %>
              <tr class="client-row">
                <td class="client-name" data-label="Name"><%= "#{client.first_name} #{client.last_name}" %></td>
                <td data-label="Year of Birth"><%= client.year_of_birth %></td>
                <td data-label="City"><%= client.city %></td>
                <td data-label="Contacts">
                  <% client.client_contacts.each do |c| %>
                    <p><strong><%= c.method.titleize %>:</strong> <%= c.value %></p>
                  <% end %>
                </td>
                <td data-label="Actions">
                  <% if client.psychologist? && client.psychologist_profile == current_user.psychologist_profile %>
                    <%= link_to "Edit", edit_client_info_path(client), class: "button is-small is-link" %>
                  <% else %>
                    <span class="has-text-grey-light">—</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p>No clients yet.</p>
    <% end %>
  </div>
</div>

