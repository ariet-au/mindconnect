<style>
  body {
    background: #ffffff;
    margin: 0;
    padding: 0;
  }

  .client-container {
    max-width: 400px;
    margin: 0 auto;
    padding: 16px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .profile-card {
    background: #ffffff;
    border: 2px solid #f0f0f0;
    border-radius: 20px;
    padding: 24px;
    color: #333;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    margin-bottom: 16px;
    position: relative;
  }

  .client-name {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 8px;
    text-align: center;
    color: #1a1a1a;
  }

  .client-location {
    font-size: 16px;
    color: #666;
    text-align: center;
    margin-bottom: 20px;
  }

  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    margin-bottom: 20px;
  }

  .info-item {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    padding: 12px;
    border-radius: 12px;
    text-align: center;
  }

  .info-value {
    font-weight: 600;
    font-size: 16px;
    color: #1a1a1a;
  }

  .info-label {
    font-size: 12px;
    color: #666;
    margin-top: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .reason-section {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    padding: 16px;
    border-radius: 12px;
    margin-bottom: 16px;
  }

  .reason-text {
    font-size: 15px;
    line-height: 1.4;
    margin-bottom: 8px;
    color: #333;
  }

  .submitted-by {
    font-size: 12px;
    color: #666;
    text-align: right;
  }

  .contacts-card {
    background: #ffffff;
    border: 2px solid #f0f0f0;
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .contacts-title {
    font-size: 18px;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
  }

  .contacts-title::before {
    content: '‚òé';
    margin-right: 8px;
    color: #333;
  }

  .contact-item {
    display: flex;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .contact-item:last-child {
    border-bottom: none;
  }

  .contact-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12px;
    font-size: 18px;
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    color: #333;
  }

  .contact-info {
    flex: 1;
  }

  .contact-method {
    font-size: 12px;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 2px;
  }

  .contact-value {
    font-size: 15px;
    color: #1a1a1a;
    font-weight: 500;
  }

  @media (max-width: 480px) {
    .client-container {
      padding: 12px;
    }
    
    .profile-card {
      padding: 20px;
    }
    
    .info-grid {
      grid-template-columns: 1fr;
      gap: 12px;
    }
    
    .client-name {
      font-size: 22px;
    }
  }
</style>

<div class="client-container">
  <div class="profile-card">
    <div class="client-name">
      <%= @client_info.full_name %>
      <% if @client_info.year_of_birth.present? %>
        , <%= Date.current.year - @client_info.year_of_birth %>
      <% end %>
    </div>    
    <div class="client-location">üìç <%= @client_info.city %>  <%= ActiveSupport::TimeZone[@client_info.timezone].formatted_offset %> GMT</div>
    

    
    <div class="reason-section">
      <div class="reason-text"><%= @client_info.reason_for_therapy %></div>
      <div class="submitted-by"><%= t('client_infos.show.submitted_by', name: @client_info.submitted_by) %></div>
    </div>
  </div>

  <% if @client_info.client_contacts.any? %>
  <div class="contacts-card">
    <% @client_info.client_contacts.each do |contact| %>
      <div class="contact-item">
        <div class="contact-icon">
          <%= case contact.method.downcase
              when 'email' then '‚úâ'
              when 'phone' then 'üìû'
              when 'whatsapp' then 'üí¨'
              when 'telegram' then '‚úà'
              else '‚òé'
              end %>
        </div>
        <div class="contact-info">
          <div class="contact-method"><%= t("client_infos.show.contact_methods.#{contact.method.downcase}") %></div>
          <div class="contact-value">
            <% case contact.method.downcase %>
            <% when 'email' %>
              <%= mail_to contact.value, contact.value %>
            <% when 'phone' %>
              <%= link_to contact.value, "tel:#{contact.value}" %>
            <% when 'whatsapp' %>
              <%= link_to contact.value, "https://wa.me/#{contact.value.gsub(/\D/, '')}" %>
            <% when 'telegram' %>
              <%= link_to contact.value, "https://t.me/#{contact.value.delete('@')}" %>
            <% else %>
              <%= contact.value %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

</div>