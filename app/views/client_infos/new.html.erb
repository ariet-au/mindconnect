<div class="section">
  <div class="container">
    

    <%= render "form", client_info: @client_info %>

    <%= link_to "Back to Clients", client_infos_path, class: "button is-light mt-3" %>
  </div>
</div>

<style>
/* Ensure Bulma's section and container styles are respected */
.section {
  padding: 2rem 1.5rem;
}

/* Form field enhancements */
.field {
  margin-bottom: 1.5rem;
}

.field label {
  font-weight: 700;
  color: hsl(0, 0%, 21%);
}

.field .input,
.field .select select,
.field .textarea {
  border-radius: 6px;
  font-size: 1rem;
  box-shadow: none; /* Avoid Bulma conflicts */
}

.field .select select {
  width: 100%;
  padding-right: 2.5rem; /* Space for dropdown arrow */
}

/* Style the select dropdown arrow */
.field .select::after {
  border-color: hsl(0, 0%, 29%);
}

/* Error notification */
.notification.is-danger {
  background-color: hsl(348, 86%, 61%);
  color: #fff;
  padding: 1rem 1.5rem;
  border-radius: 6px;
}

.notification ul {
  margin: 0;
  padding-left: 1.25rem;
}

.notification li {
  margin-bottom: 0.5rem;
}

/* Contacts section */
#contacts-list .contact-row {
  background-color: hsl(0, 0%, 98%);
  padding: 1rem;
  border-radius: 6px;
  margin-bottom: 1rem;
  position: relative;
  border: 1px solid hsl(0, 0%, 86%);
}

.contact-row .field {
  margin-bottom: 1rem;
}

.contact-row .remove-contact {
  position: absolute;
  top: 0.75rem;
  right: 0.75rem;
  background: none;
  border: none;
  color: hsl(348, 86%, 61%);
  font-size: 0.9rem;
  cursor: pointer;
  transition: color 0.2s;
}

.contact-row .remove-contact:hover {
  color: hsl(348, 86%, 50%);
}

/* Buttons */
.button.is-primary {
  border-radius: 6px;
  font-size: 1rem;
  padding: calc(0.5em - 1px) 1em;
}

.button.is-link.is-small {
  font-size: 0.875rem;
}

#add-contact {
  margin: 1rem 0;
}

/* Mobile responsiveness */
@media screen and (max-width: 768px) {
  .section {
    padding: 1.5rem 1rem;
  }

  .field label {
    font-size: 0.9rem;
  }

  .field .input,
  .field .select select,
  .field .textarea {
    font-size: 0.95rem;
  }

  .button.is-primary,
  #add-contact {
    width: 100%;
    font-size: 0.95rem;
  }

  .contact-row {
    padding: 0.75rem;
  }

  .contact-row .remove-contact {
    font-size: 0.85rem;
  }

  .notification.is-danger {
    font-size: 0.9rem;
    padding: 0.75rem 1rem;
  }
}

/* Datalist styling for city input */
input[list="cities"] {
  appearance: none;
  -webkit-appearance: none;
}

/* High-resolution screens */
@media screen and (min-resolution: 2dppx) {
  .field .input,
  .field .select select,
  .field .textarea {
    font-size: 1.05rem;
  }

  .button.is-primary {
    font-size: 1.05rem;
  }
}
