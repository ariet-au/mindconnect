<%= form_with(model: issue) do |form| %>
  <% if issue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
        <% issue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category %>
  </div>

  <div>
    <%= form.label :severity_level, style: "display: block" %>
    <%= form.text_field :severity_level %>
  </div>

  <div>
    <%= form.label :client_type_ids, "Applicable Client Types", style: "display: block" %>
    <%= form.collection_select :client_type_ids, ClientType.all, :id, :name, {}, { multiple: true, size: 5 } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
