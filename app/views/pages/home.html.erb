<script>
  // === CAROUSEL INITIALIZATION (Locations & Issues) ===
  document.querySelectorAll('.carousel-wrapper').forEach(carousel => {
    const container = carousel.querySelector('.carousel-container');
    const track = carousel.querySelector('.carousel-track');
    const items = carousel.querySelectorAll('.carousel-item');
    const prevArrow = carousel.querySelector('.carousel-arrow.prev');
    const nextArrow = carousel.querySelector('.carousel-arrow.next');

    if (!container || !items.length) return;

    let currentScroll = 0;
    let intervalId;
    const scrollAmount = 300;

    function updateCarousel() {
      track.style.transform = `translateX(-${currentScroll}px)`;
      const maxScroll = track.scrollWidth - container.clientWidth;
      prevArrow.classList.toggle('disabled', currentScroll <= 0);
      nextArrow.classList.toggle('disabled', currentScroll >= maxScroll);
    }

    function startAutoScroll() {
      intervalId = setInterval(() => {
        const maxScroll = track.scrollWidth - container.clientWidth;
        if (currentScroll < maxScroll) {
          currentScroll = Math.min(currentScroll + scrollAmount, maxScroll);
        } else {
          currentScroll = 0;
        }
        updateCarousel();
      }, 3000);
    }

    function stopAutoScroll() {
      clearInterval(intervalId);
    }

    prevArrow.addEventListener('click', () => {
      currentScroll = Math.max(currentScroll - scrollAmount, 0);
      updateCarousel();
    });

    nextArrow.addEventListener('click', () => {
      const maxScroll = track.scrollWidth - container.clientWidth;
      currentScroll = Math.min(currentScroll + scrollAmount, maxScroll);
      updateCarousel();
    });

    carousel.addEventListener('mouseenter', stopAutoScroll);
    carousel.addEventListener('mouseleave', startAutoScroll);

    updateCarousel();
    startAutoScroll();
  });

  // === PSYCHOLOGIST GRID â†’ CAROUSEL (EQUAL WIDTHS) ===
  function initPsychologistCarousel() {
    const wrapper = document.querySelector('.psychologist-carousel-wrapper');
    const grid = document.getElementById('psychologist-grid');
    const cards = Array.from(grid.querySelectorAll('.profile-card'));
    const prevArrow = wrapper.querySelector('.carousel-arrow.prev');
    const nextArrow = wrapper.querySelector('.carousel-arrow.next');

    if (!grid || cards.length === 0) return;

    let currentPage = 0;
    let cardsToShow = 5;

    function updateCardsToShow() {
      const width = window.innerWidth;
      if (width <= 768) cardsToShow = 1;
      else if (width <= 1024) cardsToShow = 2;
      else if (width <= 1200) cardsToShow = 3;
      else if (width <= 1400) cardsToShow = 4;
      else cardsToShow = 5;

      const totalPages = Math.ceil(cards.length / cardsToShow);

      if (cards.length > cardsToShow) {
        grid.classList.add('carousel-mode');
        grid.style.gridTemplateColumns = `repeat(${cardsToShow}, 1fr)`;
        prevArrow.style.display = 'flex';
        nextArrow.style.display = 'flex';
        showPage(currentPage);
      } else {
        grid.classList.remove('carousel-mode');
        grid.style.gridTemplateColumns = '';
        prevArrow.style.display = 'none';
        nextArrow.style.display = 'none';
        cards.forEach(card => {
          card.style.display = 'flex';
          card.classList.remove('visible');
        });
        currentPage = 0;
      }
    }

    function showPage(pageIndex) {
      const totalPages = Math.ceil(cards.length / cardsToShow);
      currentPage = Math.max(0, Math.min(pageIndex, totalPages - 1));

      const startIndex = currentPage * cardsToShow;
      const endIndex = Math.min(startIndex + cardsToShow, cards.length);

      cards.forEach((card, index) => {
        if (index >= startIndex && index < endIndex) {
          card.style.display = 'flex';
          card.classList.add('visible');
        } else {
          card.style.display = 'none';
          card.classList.remove('visible');
        }
      });

      prevArrow.classList.toggle('disabled', currentPage === 0);
      nextArrow.classList.toggle('disabled', currentPage >= totalPages - 1);
    }

    prevArrow.addEventListener('click', () => {
      if (currentPage > 0) showPage(currentPage - 1);
    });

    nextArrow.addEventListener('click', () => {
      const totalPages = Math.ceil(cards.length / cardsToShow);
      if (currentPage < totalPages - 1) showPage(currentPage + 1);
    });

    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        currentPage = 0;
        updateCardsToShow();
      }, 100);
    });

    updateCardsToShow();
  }

