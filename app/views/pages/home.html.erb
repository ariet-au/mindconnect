<style>
  .main-content .container {
    max-width: 100% !important;
    width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --primary: #2c5aa0;
    --secondary: #f0f4f9;
    --accent: #4a9eff;
    --text-dark: #1a2332;
    --text-light: #6b7280;
    --border: #e5e7eb;
    --hover-bg: #e8f0fc;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    color: var(--text-dark);
    line-height: 1.6;
  }

  .hero-section {
    background: linear-gradient(135deg, #ffffff 0%, var(--secondary) 100%);
    padding: 80px 20px;
    text-align: center;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(74, 158, 255, 0.1) 0%, transparent 70%);
    border-radius: 50%;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(44, 90, 160, 0.08) 0%, transparent 70%);
    border-radius: 50%;
  }

  .hero-content {
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-section h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    margin-bottom: 20px;
    color: var(--text-dark);
    line-height: 1.2;
  }

  .hero-section h1 span {
    color: var(--primary);
  }

  .hero-section p {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: var(--text-light);
    margin-bottom: 40px;
  }

  .hero-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 14px 32px;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    border: none;
    text-align: center;
  }

  .btn-primary {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 12px rgba(44, 90, 160, 0.25);
  }

  .btn-primary:hover {
    background: #1f3f6b;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(44, 90, 160, 0.35);
  }

  .btn-secondary {
    background: white;
    color: var(--primary);
    border: 2px solid var(--primary);
  }

  .btn-secondary:hover {
    background: var(--secondary);
    transform: translateY(-2px);
  }

  .section {
    padding: 70px 20px;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: 50px;
    color: var(--text-dark);
  }

  .search-section {
    background: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Carousel Styles */
  .carousel-wrapper {
    position: relative;
    margin-bottom: 40px;
  }

  .carousel-container {
    overflow: hidden;
    border-radius: 8px;
  }

  .carousel-track {
    display: flex;
    transition: transform 0.5s ease;
    gap: 10px;
  }

  .carousel-item {
    flex: 0 0 auto;
    padding: 12px 20px;
    border-radius: 24px;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    background: var(--secondary);
    border: 2px solid transparent;
    color: var(--text-dark);
    font-weight: 500;
    font-size: 0.95rem;
    white-space: nowrap;
  }

  .carousel-item:hover {
    background: var(--hover-bg);
    border-color: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(44, 90, 160, 0.15);
  }

  .carousel-item.city-item {
    background: linear-gradient(135deg, #f8faff 0%, var(--secondary) 100%);
  }

  .carousel-item.city-item:hover {
    background: linear-gradient(135deg, var(--hover-bg) 0%, #dce7f7 100%);
  }

  .carousel-item .count {
    font-size: 0.8rem;
    color: var(--text-light);
    margin-left: 6px;
  }

  .carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: white;
    color: var(--primary);
    border: 2px solid var(--border);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 10;
    font-size: 1.2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .carousel-arrow:hover:not(.disabled) {
    background: var(--primary);
    color: white;
    border-color: var(--primary);
    box-shadow: 0 4px 12px rgba(44, 90, 160, 0.25);
  }

  .carousel-arrow.disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .carousel-arrow.prev {
    left: -50px;
  }

  .carousel-arrow.next {
    right: -50px;
  }

  /* Price Grid */
  .price-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
  }

  .price-card {
    background: var(--secondary);
    padding: 30px;
    border-radius: 8px;
    border-left: 4px solid var(--primary);
    transition: all 0.3s ease;
  }

  .price-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(44, 90, 160, 0.12);
  }

  .price-card h3 {
    font-size: 1.3rem;
    margin-bottom: 10px;
    color: var(--text-dark);
  }

  .price-card p {
    color: var(--text-light);
    font-size: 0.95rem;
    margin-bottom: 15px;
  }

  .price-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .price-link:hover {
    transform: translateX(5px);
  }

  .btn-center {
    text-align: center;
    margin-top: 30px;
  }

  .how-section {
    background: white;
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    max-width: 1000px;
    margin: 0 auto;
  }

  .step {
    text-align: center;
  }

  .step-number {
    width: 56px;
    height: 56px;
    background: var(--primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.6rem;
    font-weight: 700;
    margin: 0 auto 20px;
  }

  .step h4 {
    font-size: 1.15rem;
    margin-bottom: 12px;
    color: var(--text-dark);
  }

  .step p {
    color: var(--text-light);
    font-size: 0.95rem;
  }

  .quizzes-section {
    background: linear-gradient(135deg, var(--secondary) 0%, #e8f0fc 100%);
  }

  .quiz-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 25px;
  }

  .quiz-card {
    background: white;
    padding: 35px 25px;
    border-radius: 8px;
    text-align: center;
    border-top: 4px solid var(--primary);
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    cursor: pointer;
  }

  .quiz-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(44, 90, 160, 0.15);
  }

  .quiz-icon {
    font-size: 2.5rem;
    margin-bottom: 15px;
    color: var(--primary);
  }

  .quiz-card h4 {
    font-size: 1.2rem;
    margin-bottom: 10px;
    color: var(--text-dark);
  }

  .quiz-card p {
    color: var(--text-light);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .quiz-link {
    color: var(--primary);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    margin-top: 15px;
  }

  .quiz-link:hover {
    transform: translateX(5px);
  }

  .cta-section {
    background: white;
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-section h3 {
    font-size: clamp(1.5rem, 3vw, 2.2rem);
    margin-bottom: 15px;
    color: var(--text-dark);
  }

  .cta-section p {
    color: var(--text-light);
    margin-bottom: 30px;
    font-size: 1.05rem;
  }

  /* === PSYCHOLOGISTS SECTION – FIXED EQUAL WIDTHS === */
  .psychologists-section {
    background: white;
  }

  .psychologist-carousel-wrapper {
    position: relative;
    padding: 0 60px;
  }

  .psychologist-grid {
    display: grid;
    gap: 25px;
    transition: all 0.3s ease;
    grid-template-columns: repeat(5, 1fr);
  }

  .psychologist-grid.carousel-mode {
    overflow: hidden;
  }

  .profile-card {
    background: var(--secondary);
    padding: 30px;
    border-radius: 8px;
    text-align: center;
    border-top: 4px solid var(--primary);
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 100% !important;
    min-height: 340px;
  }

  .profile-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(44, 90, 160, 0.15);
  }

  .profile-img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto 20px;
  }

  .profile-card h3 {
    font-size: 1.2rem;
    margin: 12px 0 8px;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .rate {
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 15px;
  }

  .about {
    flex-grow: 1;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    justify-content: center;
    margin: 10px 0;
    min-height: 60px;
    align-content: flex-start;
  }

/* -------------------------------------------------
