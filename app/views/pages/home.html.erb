  }

  /* Quiz carousel mode */
  .quiz-carousel-wrapper {
    position: relative;
    padding: 0 60px;
  }

  .quiz-grid.carousel-mode {
    overflow: hidden;
  }

  @media (max-width: 1400px) {
    .psychologist-grid { grid-template-columns: repeat(4, 1fr); }
  }

  @media (max-width: 1200px) {
    .psychologist-grid { grid-template-columns: repeat(3, 1fr); }
  }

  @media (max-width: 1024px) {
    .carousel-arrow.prev { left: 10px; }
    .carousel-arrow.next { right: 10px; }
    .psychologist-grid { grid-template-columns: repeat(2, 1fr); }
    .psychologist-carousel-wrapper, .quiz-carousel-wrapper { padding: 0 50px; }
  }

  @media (max-width: 768px) {
    .section { padding: 50px 20px; }
    .hero-section { padding: 60px 20px; min-height: auto; }
    .hero-buttons { flex-direction: column; width: 100%; align-items: stretch; }
    .btn { width: 100%; max-width: none; }
    .carousel-arrow { width: 36px; height: 36px; font-size: 1rem; }
    .carousel-arrow.prev { left: 5px; }
    .carousel-arrow.next { right: 5px; }
    .carousel-item { font-size: 0.85rem; padding: 10px 16px; }
    .psychologist-grid { grid-template-columns: 1fr; }
    .quiz-grid { grid-template-columns: 1fr; }
    .psychologist-carousel-wrapper, .quiz-carousel-wrapper { padding: 0 45px; }
  }

  @media (max-width: 480px) {
    .carousel-item { font-size: 0.8rem; padding: 8px 14px; }
  }
</style>

