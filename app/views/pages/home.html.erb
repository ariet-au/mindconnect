<script>
  // Initialize carousels with improved navigation and auto-scroll
  document.querySelectorAll('.carousel-wrapper').forEach(carousel => {
    const container = carousel.querySelector('.carousel-container');
    const track = carousel.querySelector('.carousel-track');
    const items = carousel.querySelectorAll('.carousel-item');
    const prevArrow = carousel.querySelector('.carousel-arrow.prev');
    const nextArrow = carousel.querySelector('.carousel-arrow.next');

    if (!container || !items.length) return;

    let currentScroll = 0;
    let intervalId;
    const scrollAmount = 300;

    function updateCarousel() {
      track.style.transform = `translateX(-${currentScroll}px)`;
      
      const maxScroll = track.scrollWidth - container.clientWidth;
      prevArrow.classList.toggle('disabled', currentScroll <= 0);
      nextArrow.classList.toggle('disabled', currentScroll >= maxScroll);
    }

    function startAutoScroll() {
      intervalId = setInterval(() => {
        const maxScroll = track.scrollWidth - container.clientWidth;
        if (currentScroll < maxScroll) {
          currentScroll = Math.min(currentScroll + scrollAmount, maxScroll);
        } else {
          currentScroll = 0;
        }
        updateCarousel();
      }, 3000);
    }

    function stopAutoScroll() {
      clearInterval(intervalId);
    }

    prevArrow.addEventListener('click', () => {
      currentScroll = Math.max(currentScroll - scrollAmount, 0);
      updateCarousel();
    });

    nextArrow.addEventListener('click', () => {
      const maxScroll = track.scrollWidth - container.clientWidth;
      currentScroll = Math.min(currentScroll + scrollAmount, maxScroll);
      updateCarousel();
    });

    // Auto-scroll with pause on hover
    carousel.addEventListener('mouseenter', stopAutoScroll);
    carousel.addEventListener('mouseleave', startAutoScroll);

    updateCarousel();
    startAutoScroll();
  });

  // Make profile cards clickable, excluding inner links
  document.querySelectorAll('.profile-card').forEach(card => {
    card.addEventListener('click', (e) => {
      if (!e.target.closest('a')) {
        window.location.href = card.querySelector('.profile-link').href;
      }
    });
  });

  // Geolocation with fixed text update
  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(function(position) {
      fetch(`https://nominatim.openstreetmap.org/reverse?lat=${position.coords.latitude}&lon=${position.coords.longitude}&format=json`)
        .then(response => response.json())
        .then(data => {
          const city = data.address.city || data.address.town || data.address.village || data.address.state;
          if (city) {
            document.getElementById("location-text").textContent = `Get professional mental health support from verified experts â€” online or in ${city}`;
          }
        })
        .catch(err => console.log('Geolocation lookup failed'));
    });
  }
</script>