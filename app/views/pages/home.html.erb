  background: white;
  color: var(--text-dark);
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 0.8rem;
  border: 1px solid var(--border);
  transition: all 0.2s ease;

  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block;

  position: relative;               /* for tooltip */
  cursor: default;
}

/* Tooltip on hover (optional) */
