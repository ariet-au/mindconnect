<style>
    /* ============================================
    Design System & Variables
    ============================================ */
    :root {
        --primary-blue: #2563EB;
        --primary-blue-dark: #1D4ED8;
        --primary-blue-light: #3B82F6;
        --accent-green: #059669;
        --accent-green-dark: #047857;
        --telegram-blue: #0088CC;
        --gray-50: #F9FAFB;
        --gray-100: #F3F4F6;
        --gray-200: #E5E7EB;
        --gray-300: #D1D5DB;
        --gray-400: #9CA3AF;
        --gray-500: #6B7280;
        --gray-600: #4B5563;
        --gray-700: #374151;
        --gray-800: #1F2937;
        --gray-900: #111827;
        --white: #FFFFFF;
        --background: #FDFDFD;
        
        --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
        --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
    }

    /* ============================================
    Base & Typography
    ============================================ */
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        color: var(--gray-900);
        background-color: var(--background);
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        line-height: 1.6;
        font-weight: 400;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    *, *::before, *::after {
        box-sizing: inherit;
    }

    .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .section {
        padding: 7rem 0;
        position: relative;
    }

    .title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        letter-spacing: -0.02em;
        color: var(--gray-900);
    }

    .features-section .title,
    .cta-section .title {
        font-size: 2.2rem; /* Adjust as needed */
        line-height: 1.2;
    }

    /* Optional: smaller subtitles too */
    .features-section .subtitle,
    .cta-section .subtitle {
        font-size: 1rem;
    }


    
    .subtitle {
        font-size: 1.25rem;
        color: var(--gray-600);
        max-width: 680px;
        margin: 0 auto 3rem;
        line-height: 1.6;
        font-weight: 400;
    }

    .highlight {
        color: var(--primary-blue);
        font-weight: 600;
    }

    /* ============================================
    Hero Section
    ============================================ */
    .hero-section {
        background-color: var(--white);
        text-align: center;
        padding: 8rem 0 9rem;
        border-bottom: 1px solid var(--gray-100);
    }
    
    .hero-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .logo {
        max-width: 200px;
        height: auto;
        margin-bottom: 3rem;
        opacity: 0.95;
    }

    .feature-list {
        list-style: none;
        padding: 0;
        text-align: left;
        max-width: 580px;
        margin: 3rem auto 0;
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    .feature-list li {
        display: flex;
        align-items: flex-start;
        font-size: 1.125rem;
        color: var(--gray-600);
        line-height: 1.5;
        font-weight: 400;
    }

    .feature-list li::before {
        content: '✓';
        color: var(--accent-green);
        margin-right: 1rem;
        font-size: 1.25rem;
        font-weight: 700;
        margin-top: 1px;
        flex-shrink: 0;
    }

    /* ============================================
    Buttons & Links
    ============================================ */
    .buttons-group {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 1.5rem;
        margin-top: 3rem;
        margin-bottom: 2rem;
    }

    .button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 2.5rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        border: 1px solid transparent;
        white-space: nowrap;
    }

    .button:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }
    
    .button-primary {
        background-color: var(--primary-blue);
        color: var(--white);
        border-color: var(--primary-blue);
    }
    .button-primary:hover {
        background-color: var(--primary-blue-dark);
        border-color: var(--primary-blue-dark);
    }

    .button-outline {
        background-color: transparent;
        border-color: var(--gray-300);
        color: var(--gray-700);
    }
    .button-outline:hover {
        background-color: var(--gray-50);
        border-color: var(--gray-400);
        color: var(--gray-900);
    }
    
    .button-outline-green {
        background-color: transparent;
        border-color: var(--accent-green);
        color: var(--accent-green);
    }
    .button-outline-green:hover {
        background-color: var(--accent-green);
        color: var(--white);
    }
    
    .button-outline-tg {
        background-color: transparent;
        border-color: var(--telegram-blue);
        color: var(--telegram-blue);
    }
    .button-outline-tg:hover {
        background-color: var(--telegram-blue);
        color: var(--white);
    }

    .social-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 52px;
        height: 52px;
        border-radius: 0.5rem;
        transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        background-color: var(--gray-50);
        border: 1px solid var(--gray-200);
    }

    .social-icon i {
        font-size: 24px;
        background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .social-icon:hover {
        transform: translateY(-2px);
        background-color: var(--white);
        border-color: var(--gray-300);
        box-shadow: var(--shadow-md);
    }

    /* ============================================
    Features Section
    ============================================ */
    .features-section {
        background-color: var(--gray-50);
        border-bottom: 1px solid var(--gray-100);
    }
    
    .features-section .title, .features-section .subtitle {
        text-align: center;
    }

    .columns {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 0.25rem;
        margin-top: 4rem;
    }

    .feature-card {
        padding: 2.5rem 2rem;
        background-color: var(--white);
        border-radius: 0.75rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--gray-200);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: left;
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
    }

    .feature-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-xl);
        border-color: var(--gray-300);
    }

    .feature-card.coming-soon {
        opacity: 0.8;
        border-color: var(--gray-200);
        background: linear-gradient(135deg, var(--white) 0%, var(--gray-50) 100%);
    }

    .feature-card.coming-soon::before {
        content: "Скоро";
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background-color: var(--gray-100);
        color: var(--gray-600);
        padding: 0.25rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .card-icon {
        width: 56px;
        height: 56px;
        color: var(--primary-blue);
        margin-bottom: 1.5rem;
        background-color: var(--gray-50);
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--gray-200);
    }
    
    .feature-card.coming-soon .card-icon {
        color: var(--gray-500);
        background-color: var(--gray-100);
    }
    
    .card-icon svg {
        width: 28px;
        height: 28px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--gray-900);
        line-height: 1.3;
    }

    .feature-card.coming-soon .card-title {
        color: var(--gray-700);
    }

    .card-text {
        font-size: 1.05rem;
        color: var(--gray-600);
        line-height: 1.6;
        flex-grow: 1;
    }

    .feature-card.coming-soon .card-text {
        color: var(--gray-500);
    }

    /* ============================================
    CTA Section
    ============================================ */
    .cta-section {
        background-color: var(--white);
        text-align: center;
        padding: 8rem 0;
    }

    /* ============================================
    Animations & Responsive Design
    ============================================ */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
        opacity: 0;
    }

    @media (max-width: 768px) {
        /* Remove side padding for full-width on mobile */
        .container {
            padding: 0 1rem;
        }
        .title {
            font-size: 2.5rem;
        }
        .subtitle {
            font-size: 1.125rem;
        }
        .section {
            padding: 4rem 0;
        }
        .hero-section {
            padding: 6rem 0 7rem;
        }
        .cta-section {
            padding: 6rem 0;
        }
        .buttons-group {
            flex-direction: column;
            width: 100%;
            max-width: 400px;
            margin-left: auto;
            margin-right: auto;
            gap: 1rem;
        }
        .button {
            width: 100%;
            padding: 1rem 2rem;
        }
        .columns {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        /* Adjust card padding to give more room for text */
        .feature-card {
            padding: 2rem 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .title {
            font-size: 2.25rem;
        }
        .feature-list li {
            font-size: 1rem;
        }
    }
</style>

