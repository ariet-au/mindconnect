<h1 class="title">Profile Reviews</h1>

<table class="table is-striped is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile Status</th>
      <th>Educations</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @psychologists.each do |p| %>
      <tr>
        <td><%= p.full_name %></td>

        <!-- PROFILE STATUS -->
        <td><%= p.status.humanize %></td>

        <!-- LIST ALL EDUCATIONS WITH STATUSES -->
        <td>
          <% p.educations.each do |edu| %>
            <div>
              <strong><%= edu.degree %></strong>
              â€“ <%= edu.verification_status.humanize %>
            </div>
          <% end %>
        </td>

        <td>
          <%= link_to "Review",
              admin_psychologist_review_path(p),
              class: "button is-small is-info" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
