      const isoTime = span.dataset.time;
      if (!isoTime) return;

      const localDate = new Date(isoTime);
      const formatted = localDate.toLocaleString(undefined, {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: false
      });

      span.textContent = `${formatted} (your local time)`;
    });
  });
