        <!-- Navigation Links -->
        <div class="navbar-item">
          <%= link_to 'Подобрать Психолога', search_landing_path, class: "nav-link" %>
        </div>

        <div class="navbar-item">
          <%= link_to 'Для Психологов', landing_psych_path, class: "nav-link" %>
        </div>
        
        <div class="navbar-item">
          <%= link_to 'Контакты', contact_us_path, class: "nav-link" %>
        </div>
        
        <!-- User Menu -->
        <div class="navbar-item">
          <% if user_signed_in? %>
            <div class="dropdown is-right is-hoverable">
              <div class="dropdown-trigger">
                <button class="user-dropdown-btn" aria-haspopup="true" aria-controls="user-menu">
                  <span class="icon-text">
                    <span class="icon">
                      <i class="fas fa-user-circle"></i>
                    </span>
                    <span class="user-email"><%= current_user.email %></span>
                    <span class="icon">
                      <i class="fas fa-chevron-down"></i>
                    </span>
                  </span>
                </button>
              </div>
              <div class="dropdown-menu" id="user-menu" role="menu">
                <div class="dropdown-content">
                  <% if current_user.psychologist? && current_user.psychologist_profile.present? %>
                    <%= link_to psychologist_profile_path(current_user.psychologist_profile), 
                        class: "dropdown-item" do %>
                      <span class="icon">
                        <i class="fas fa-user-edit"></i>
                      </span>
                      <span>Мой Профиль</span>
                    <% end %>
                  <% end %>
                  <% if current_user.client? && current_user.client_profile.present? %>
                    <%= link_to client_profile_path(current_user.client_profile), 
                        class: "dropdown-item" do %>
                      <span class="icon">
                        <i class="fas fa-user-edit"></i>
                      </span>
                      <span>Мой Профиль</span>
                    <% end %>
                  <% end %>
                  <hr class="dropdown-divider">
                  <%= link_to destroy_user_session_path,
                      data: { turbo_method: :delete }, 
                      class: "dropdown-item" do %>
                    <span class="icon">
                      <i class="fas fa-sign-out-alt"></i>
                    </span>
                    <span>Выйти</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="auth-buttons">
              <%= link_to 'Войти', new_user_session_path, class: "auth-btn auth-btn-login" %>
              <%= link_to 'Регистрация', new_user_registration_path, class: "auth-btn auth-btn-signup" %>
            </div>
