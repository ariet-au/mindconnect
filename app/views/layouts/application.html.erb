<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "AkSanaa" %></title>
        <%= favicon_link_tag 'favicon.ico', type: 'image/x-icon' %>

        

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
<meta name="turbo-cache-control" content="no-cache">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>


    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <!-- Cropper.js CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" rel="stylesheet">

    <!-- Cropper.js JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>

    <link rel="stylesheet"  href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css">
    <%= javascript_importmap_tags %>



  </head>

<body>

<nav class="navbar is-white is-fixed-top has-shadow" role="navigation" aria-label="main navigation">
  <div class="container">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <%= image_tag("ak_logo.png", alt: "Logo") %>
        <strong class="has-text-weight-semibold">AkSanaa</strong>
      </a>
    </div>




    <div class="navbar-menu">
      <div class="navbar-end">
        <!-- Find a Therapist Button -->
        <div class="navbar-item">
          <%= link_to 'Find a Therapist', search_landing_path, class: "button is-info is-outlined" %>
        </div>

          <div class="navbar-item">
          <%= link_to 'Для Психологов', landing_psych_path, class: "button is-info is-outlined" %>
        </div>
        
        <!-- User Menu -->
        <div class="navbar-item">
          <% if user_signed_in? %>
            <div class="dropdown is-right is-hoverable">
              <div class="dropdown-trigger">
                <button class="button is-white" aria-haspopup="true" aria-controls="user-menu">
                  <span class="icon-text">
                    <span class="icon">
                      <i class="fas fa-user-circle has-text-grey-dark"></i>
                    </span>
                    <%= link_to psychologist_profile_path(current_user.psychologist_profile) do %>
                          <span class="has-text-grey-dark"><%= current_user.email %></span>
                          <% end %>
                  </span>
                </button>
              </div>
              <div class="dropdown-menu" id="user-menu" role="menu">

              
                <div class="dropdown-content has-background-white">
                  <% if current_user.psychologist? && current_user.psychologist_profile.present? %>
                    <%= link_to psychologist_profile_path(current_user.psychologist_profile), 
                        class: "dropdown-item has-text-grey-darker" do %>
                      <span class="icon">
                        <i class="fas fa-user-edit"></i>
                      </span>
                      <span>My Profile</span>
                    <% end %>
                  <% end %>
                  <hr class="dropdown-divider">
                  <%= link_to destroy_user_session_path,
                      data: { turbo_method: :delete }, 
                      class: "dropdown-item has-text-grey-darker" do %>
                    <span class="icon">
                      <i class="fas fa-sign-out-alt"></i>
                    </span>
                    <span>Sign Out</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="buttons">
              <%= link_to 'Log in', new_user_session_path, class: "button is-primary is-outlined" %>
              <%= link_to 'Sign up', new_user_registration_path, class: "button is-primary is-outlined" %>
            </div>
          <% end %>

       
        </div>
              <div class="buttons">
                                <%= render 'layouts/currency_selector' %>   
            </div>
      </div>
    </div>
  </div>
</nav>




    <main class="main-content" style="padding-top: 4rem;"> <!-- Increased padding -->
    <div class="container">
      <%= yield %>
    </div>
  </main>

  <!-- Include Font Awesome for icons -->
  <script src="https://kit.fontawesome.com/your-code.js" crossorigin="anonymous"></script>
  
</body>
</html>
