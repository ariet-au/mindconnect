<p style="color: green"><%= notice %></p>

<%= render @quiz %>

<div>
  <% if current_user.psychologist? %>
    <%= link_to "Edit this quiz", edit_quiz_path(@quiz) %> |
  <% end %>

  <%= link_to "Edit Questions", edit_questions_quiz_path(@quiz), class: "button is-warning" %>

  <%= link_to "Back to quizzes", quizzes_path %>
  <%= link_to "Take This Quiz", take_quiz_path(@quiz), class: "button is-primary" %>

  <% if current_user.psychologist? %>
    <%= button_to "Destroy this quiz", @quiz, method: :delete %>
  <% end %>
</div>