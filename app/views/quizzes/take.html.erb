<style>
  /* Base Styles */
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');

  body {
    font-family: 'Inter', sans-serif;
    background-color: #f0f4f8; /* Light gray background */
    color: #334155;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Main Container */
  .quiz-container {
    max-width: 800px;
    margin: 40px auto;
    padding: 24px;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }

  h1 {
    font-weight: 700;
    color: #1e293b;
    margin-top: 0;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 8px;
  }

  p.quiz-description {
    color: #64748b;
    font-size: 1.125rem;
    text-align: center;
    margin-bottom: 24px;
  }

  /* Question Styling */
  .question-block {
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    padding: 24px;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .question-block > p {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 16px;
  }

  /* Answer Options */
  .option-label {
    display: block;
    cursor: pointer;
    padding: 16px 20px;
    margin-bottom: 12px;
    background-color: #ffffff;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    transition: all 0.2s ease-in-out;
    display: flex;
    align-items: center;
    font-size: 1rem;
    color: #475569;
  }

  .option-label:hover {
    background-color: #f1f5f9;
    border-color: #94a3b8;
  }
  
  /* Hide the default radio button */
  .option-label input[type="radio"] {
    position: absolute;
    opacity: 0;
  }

  /* Custom radio button appearance */
  .option-label .custom-radio {
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 2px solid #94a3b8;
    border-radius: 50%;
    margin-right: 15px;
    position: relative;
    flex-shrink: 0;
    transition: all 0.2s ease-in-out;
  }

  /* Dot inside the custom radio */
  .option-label .custom-radio::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 10px;
    height: 10px;
    background-color: #007bff;
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(0);
    transition: transform 0.2s ease-in-out;
  }

  /* Checked state */
  .option-label input[type="radio"]:checked ~ .custom-radio {
    border-color: #007bff;
  }

  .option-label input[type="radio"]:checked ~ .custom-radio::after {
    transform: translate(-50%, -50%) scale(1);
  }

  .option-label input[type="radio"]:checked + span {
    color: #1e293b;
    font-weight: 600;
  }

  /* Missing question styling */
  .question-block.missing {
    border-color: #ef4444;
    background-color: #fef2f2;
    box-shadow: 0 4px 6px -1px rgba(239, 68, 68, 0.1), 0 2px 4px -1px rgba(239, 68, 68, 0.06);
  }

  .question-block.missing::before {
    content: '⚠️';
    display: inline-block;
    margin-right: 8px;
  }

  /* Submit Button */
  .button-primary {
    display: block;
    width: 100%;
    padding: 16px 24px;
    font-size: 1.125rem;
    font-weight: 600;
    color: #ffffff;
    background-color: #007bff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out, transform 0.1s ease-in-out;
  }

  .button-primary:hover {
    background-color: #0056b3;
    transform: translateY(-2px);
  }

  .button-primary:active {
    transform: translateY(0);
  }
</style>

<div class="quiz-container">
  <h1><%= @quiz.title %></h1>
  <p class="quiz-description"><%= @quiz.description %></p>

  <%= form_with url: submit_quiz_path(@quiz), method: :post, data: { turbo: false } do %>
    <% @quiz.questions.each do |question| %>
      <div class="question-block <%= 'missing' if @missing_questions&.include?(question) %>">
        <p><%= question.text %></p>
        <% question.question_options.each do |option| %>
          <label class="option-label">
            <%= radio_button_tag "responses[#{question.id}]", option.score,
                                 params.dig(:responses, question.id.to_s) == option.score.to_s %>
            <span class="custom-radio"></span>
            <%= option.label %>
          </label>
        <% end %>
      </div>
    <% end %>

    <%= submit_tag "Submit Quiz", class: "button-primary" %>
  <% end %>
</div>
